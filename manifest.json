{
  "manifest_version": 3,
  "name": "Gemini - OpenRouter Voice",
  "version": "1.0",
  "description": "Int√©gration vocale native pour Gemini via OpenRouter",
  "permissions": [
    "storage", 
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://openrouter.ai/*",
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}